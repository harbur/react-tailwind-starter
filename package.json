{
  "name": "react-tailwind-starter-v3",
  "version": "0.1.0",
  "private": true,
  "proxy": "http://localhost:8080",
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.6",
    "@types/react-transition-group": "^4.4.0",
    "autoprefixer": "^10.0.2",
    "chokidar-cli": "^2.1.0",
    "init": "^0.1.2",
    "miragejs": "^0.1.41",
    "npm-run-all": "^4.1.5",
    "npx": "^10.2.2",
    "postcss": "^8.1.9",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-error-boundary": "^2.2.3",
    "react-icons": "^4.2.0",
    "react-query": "^2.26.3",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.0",
    "react-transition-group": "^4.4.1",
    "sb": "^6.1.10",
    "tailwindcss": "^2.0.1",
    "typescript": "~4.0.5",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "build:tailwind": "tailwind build src/assets/tailwind.css -o src/assets/main.css",
    "watch:tailwind": "chokidar 'src/assets/tailwind.css' 'src/**/*.scss' --ignore src/assets/main.css -c 'npm run build:tailwind'",
    "start": "npm-run-all build:tailwind --parallel watch:tailwind start:react",
    "start:pro": "NODE_ENV=production npm-run-all build:tailwind --parallel watch:tailwind start:react:pro",
    "start:react": "react-scripts start",
    "start:react:pro": "NODE_ENV=production react-scripts start",
    "prebuild": "run-s build:tailwind",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "coverage": "react-scripts test --coverage --watchAll=false --collectCoverageFrom=src/**/*.{js,jsx,ts,tsx} --collectCoverageFrom=!src/**/*.stories.{js,jsx,ts,tsx}",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.1.10",
    "@storybook/addon-essentials": "^6.1.10",
    "@storybook/addon-links": "^6.1.10",
    "@storybook/addon-queryparams": "^6.1.10",
    "@storybook/node-logger": "^6.1.10",
    "@storybook/preset-create-react-app": "^3.1.5",
    "@storybook/react": "^6.1.10",
    "jest-html-reporter": "^3.3.0"
  },
  "jest": {
    "coverageReporters": [
      "json",
      "html"
    ]
  }
}
